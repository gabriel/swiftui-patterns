{
    "[swift]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vknabel.vscode-swiftformat"
    },
    "sourcekit-lsp.serverPath": "sourcekit-lsp",
    "sourcekit-lsp.serverArguments": ["--build-server", "xcode-build-server"],
    "files.exclude": {
        "**/.build": true,
        "**/.swiftpm": true
    },
    "search.exclude": {
        "**/.build": true,
        "**/.swiftpm": true
    }
}
